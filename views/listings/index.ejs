 <% layout("/layouts/boilerplates") -%> 

<body> 
 <style>
    .filters{
        display:flex;
         flex:wrap;
        width:60%;
        overflow-x:auto;
        align-items:center;
 
    }

    .filter{
        min-width:100px;
        font-size:2rem;
        text-align: center;
         margin-top:2rem;
        opacity:0.9;
         margin-bottom:1rem;
     }
    
   
    .filter:hover{
        opacity:1;
        cursor:pointer;
    }
    .filter p{
        font-size:0.8rem ;
    }
    .tax{
        display:none;
    }
    .tax-check{
        border:1px solid black;
        height:3rem;
        border-radius:1rem;
         padding:1rem;
         display:flex;
         align-items:center;
         margin-left:11rem;
     }
     .store{
        display:flex;
        flex:wrap;
        align-items:center;
         
      }
      .trend{
        /* color :rgb(226, 88, 34); */
        color:rgb(235, 61, 61);
        opacity:1!important;;
        font-size:2.5rem;
      }
 </style>
 <div class="store"> 
 <div class="filters ">
<div class="filter">
   <div> <b> <i class="fa-brands trend  
    fa-bounce fa-gripfire"></i></b></div>  
    <p>Trending</p> 
</div>
<div class="filter">
    <div  ><i class="fa-solid fa-bed"></i></div>
   <P>Rooms</P>  
</div>
<div class="filter">
    <div> <i class="fa-solid fa-mountain-city"></i></div>  
     <p> iconic cities</p> 
 </div>
 <div class="filter">
     <div  > <i class="fa-solid fa-mountain-sun"></i></div>
    <P>mountains</P>  
 </div>
 <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>  
     <p> castles</p> 
 </div>
 <div class="filter">
     <div  ><i class="fa-solid fa-person-swimming"></i></div>
    <P>amzing pools</P>  
 </div>
 <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div>  
     <p> camping</p> 
 </div>
 <div class="filter">
     <div  > <i class="fa-solid fa-cow"></i></div>
    <P> farms  </P>  
 </div>
 <div class="filter">
    <div class="d-block w-100"> <i class="fa-brands fa-galactic-senate"></i></div>  
     <p> arctic pool</p> 
 </div>
 <div class="filter">
     <div  ><i class="fa-solid fa-eye"></i></div>
    <P>scenery</P>  
 </div>
 
</div>
 <div class="tax-check">
    <div class="form-check form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">taxes</label>
      </div>
 </div>
 </div>
 
 


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for( let listings of alllist){%>
<a href="/listings/<%=listings._id%>" class=" listing-link">
 <div class="card col-8 listing-card"style="width:25.4rem"   >
    <img src="<%= listings.image%>" class="card-img-top" alt="..." style="height:18rem">
    <div class="card-img-overlay">
       
    </div>
     <div class="card-body   ">
      <p class="card-text   "><b><%=listings.title%></b> <br> &#8377;<%=listings.price.toLocaleString("en-IN")%><i class="tax"> + 18% GST</i> </p>
     </div>
 </div>
</a>
            
              <%}%>

 </div>
     

    
    
</body>

<script>
    const taxinfo=document.getElementById("flexSwitchCheckDefault");
    taxinfo.addEventListener("click",()=>
    {
       const elements=document.getElementsByClassName("tax");
        for(element of elements){
            if(element.style.display!="inline"){
                element.style.display="inline";
            }
            else{
                element.style.display="none"
            }
        }
    })
</script>
 